<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal">
  <FrameLayout android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <de.taytec.biodroid.BioView android:id="@+id/surface" 
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="5dip">
      <TextView android:id="@+id/label_birth" 
        style="@style/Overlay" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:textColor="@color/clr_text_overlay"
        android:text="@string/label_birthday" />
      <TextView android:id="@+id/text_birth" 
        style="@style/Overlay" 
		android:layout_width="wrap_content" 
		android:layout_toRightOf="@+id/label_birth" 
		android:layout_height="wrap_content" 
		android:textColor="@color/clr_text_overlay" 
		/>
      <TextView android:id="@+id/label_today" 
        style="@style/Overlay" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_below="@+id/label_birth"
		android:text="@string/label_today" />
      <TextView 
        style="@style/Overlay" 
		android:id="@+id/text_today" 
		android:layout_width="wrap_content" 
		android:layout_toRightOf="@+id/label_today" 
		android:layout_below="@+id/text_birth" 
		android:layout_height="wrap_content"
        android:textColor="@color/clr_text_overlay" 
		/>
    </RelativeLayout>
  </FrameLayout>
  <android.support.v4.app.FragmentTabHost android:id="@android:id/tabhost" 
	android:layout_below="@+id/label" 
	android:layout_weight="1" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
    android:paddingLeft="5dip">
    <LinearLayout 
	  android:orientation="vertical" 
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent">
      <TabWidget android:id="@android:id/tabs" 
        style="@style/Normal" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"/>
	  <FrameLayout
		android:id="@android:id/tabcontent"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_weight="0"/>
	  <FrameLayout
		android:id="@+id/realtabcontent"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
        <ScrollView android:id="@+id/scroll_phy" 
		  android:layout_width="fill_parent" 
		  android:layout_height="wrap_content">
		  <TextView android:id="@+id/tab_phy" 
			style="@style/Overlay" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"/>
        </ScrollView>
        <ScrollView android:id="@+id/scroll_emo" 
		  android:layout_width="fill_parent" 
		  android:layout_height="wrap_content">
		  <TextView android:id="@+id/tab_emo" 
			style="@style/Overlay" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			/>
        </ScrollView>
        <ScrollView android:id="@+id/scroll_int" 
		  android:layout_width="fill_parent" 
		  android:layout_height="wrap_content">
          <TextView android:id="@+id/tab_int" 
			style="@style/Normal" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			/>
        </ScrollView>
      </FrameLayout>
    </LinearLayout>
  </android.support.v4.app.FragmentTabHost>
</LinearLayout>
