<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="top|fill_horizontal"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true">

		<TextView
			android:layout_height="wrap_content"
			android:text="Geburtstag:"
			android:layout_width="wrap_content"
			android:id="@+id/biofragmentTextView1"
			android:gravity="right|center_horizontal|fill_vertical"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="date"
			android:layout_width="wrap_content"
			android:id="@+id/inpTextBirthday"
			android:ems="10"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Datum:"
			android:layout_width="wrap_content"
			android:id="@+id/biofragmentTextView2"
			android:layout_gravity="right"
			android:layout_weight="2"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="date"
			android:layout_width="wrap_content"
			android:id="@+id/inpTxtDate"
			android:ems="10"/>

		<Button
			android:layout_height="wrap_content"
			android:text="..."
			android:layout_width="wrap_content"
			android:layout_toRightOf="@id/inpTxtDate"
			android:id="@+id/btnDatePick"/>

	</LinearLayout>

</RelativeLayout>

